{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "networkSettings": {
      "type": "object",
      "metadata": {
        "Description": "Network settings object"
      }
    },
    "masterSettings": {
      "type": "object",
      "metadata": {
        "Description": "Network settings object"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "networkApiVersion": "2016-03-30",
    "storageApiVersion": "2015-06-15"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('masterSettings').SAName]",
      "location": "[variables('location')]",
      "apiVersion": "[variables('storageApiVersion')]",
      "properties": {
        "accountType": "[parameters('masterSettings').SAType]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('masterSettings').DiagSAName]",
      "location": "[variables('location')]",
      "apiVersion": "[variables('storageApiVersion')]",
      "properties": {
        "accountType": "Standard_LRS"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[parameters('masterSettings').NicName]",
      "location": "[variables('location')]",
      "apiVersion": "[variables('networkApiVersion')]",
      
      "properties": {
        "ipConfigurations": [
          {
            "name": "[parameters('masterSettings').IPConfigName]",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              
              "subnet": {
                "id": "[parameters('networkSettings').infraSubnetRef]"
              }
            }
          }
        ]
      }
    }
  ]
  
}
